@model RoleViewModel
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div>

    <div class="form-group">
        <label class="col-form-label" asp-for="Id"></label>
        <input asp-for="Id" class="form-control" readonly />
        <span asp-validation-for="Id" class="text-danger"></span>

    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="RoleName"></label>
        <input asp-for="RoleName" class="form-control" readonly />
        <span asp-validation-for="RoleName" class="text-danger"></span>

    </div>

    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-danger">Edit</a> |
    <a asp-action="Index" class="btn btn-light">Back To List</a>




</div>

